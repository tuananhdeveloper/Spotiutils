<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="?attr/colorPrimary"
    android:layout_marginStart="@dimen/dp_24"
    android:layout_marginEnd="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_16"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_recently_played"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:shapeAppearance="@style/BorderedImageView"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/text_recently_played_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_20"
        android:textColor="@android:color/white"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_toEndOf="@id/image_recently_played"
        tools:text="@tools:sample/lorem"
        />

    <TextView
        android:id="@+id/text_recently_played_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@android:color/white"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_toEndOf="@id/image_recently_played"
        android:layout_alignParentBottom="true"
        tools:text="@tools:sample/lorem"/>
</RelativeLayout>