<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@color/gray"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_recently_played"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:shapeAppearance="@style/BorderedImageView"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/text_recently_played_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toEndOf="@id/image_recently_played"
        android:layout_toStartOf="@id/text_recently_played_history"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/text_recently_played_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toEndOf="@id/image_recently_played"
        android:layout_toStartOf="@id/text_recently_played_history"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/text_recently_played_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:maxLength="4"
        android:textColor="@android:color/white"
        app:drawableTopCompat="@drawable/ic_history"
        tools:text="@tools:sample/lorem" />

</RelativeLayout>