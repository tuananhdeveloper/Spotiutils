<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/colorPrimary"
    android:layout_width="@dimen/dp_240"
    android:layout_height="@dimen/dp_50"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/text_top_track_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            tools:text="1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_top_track"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_toEndOf="@id/text_top_track_rank"
            app:shapeAppearance="@style/BorderedImageView"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_top_track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toEndOf="@id/image_top_track"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/text_top_track_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toEndOf="@id/image_top_track"
            tools:text="@tools:sample/lorem" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
